{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    <div class="container" >
        <h1>Contacts</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ contact.id }}</td>
                </tr>
                <tr>
                    <th>Firstname</th>
                    <td>{{ contact.firstname }}</td>
                </tr>
                <tr>
                    <th>Lastname</th>
                    <td>{{ contact.lastname }}</td>
                </tr>
                <tr>
                    <th>Street_number</th>
                    <td>{{ contact.streetNumber }}</td>
                </tr>
                <tr>
                    <th>Zip</th>
                    <td>{{ contact.zip }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ contact.city }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ contact.phone }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ contact.date ? contact.date|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ contact.email }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ contact.picture }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('contacts_index') }}">back to list</a>

        <a href="{{ path('contacts_edit', {'id': contact.id}) }}">edit</a>

    </div>
    {{ include('contacts/_delete_form.html.twig') }}
{% endblock %}
